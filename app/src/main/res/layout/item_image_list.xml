<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/_20sdp"
    app:cardCornerRadius="0dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iv_image_item"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:background="@color/colorPrimaryDark"
            android:maxHeight="@dimen/_325sdp" />

        <LinearLayout
            android:id="@+id/ll_details_image"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="@dimen/_10sdp"
            android:paddingEnd="@dimen/_5sdp"
            android:paddingStart="@dimen/_5sdp"
            android:paddingTop="@dimen/_10sdp"
            android:visibility="gone">

            <TextView
                android:id="@+id/tv_location_item"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawablePadding="@dimen/_4sdp"
                android:drawableStart="@drawable/ic_location_on_black_15dp"
                android:gravity="center_vertical"
                android:text="Location"
                android:textColor="@color/colorAccent"
                android:textSize="@dimen/_10sdp" />

            <TextView
                android:id="@+id/tv_caption_item"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_5sdp"
                android:drawablePadding="@dimen/_4sdp"
                android:drawableStart="@drawable/ic_record_voice_over_black_24dp"
                android:gravity="center_vertical"
                android:text="Caption"
                android:textColor="@color/colorAccent"
                android:textSize="@dimen/_10sdp" />
        </LinearLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>